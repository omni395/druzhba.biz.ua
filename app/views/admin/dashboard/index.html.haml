%div{class: "tw-flex tw-flex-col tw-m-2 tw-justify-evenly lg:tw-flex-row"}
  %a{class: "tw-text-center sm:tw-text-start tw-cursor-pointer tw-flex tw-flex-row tw-m-1 tw-space-y-4 tw-transition-all tw-duration-500 tw-bg-white tw-border tw-border-indigo-100 tw-rounded-lg tw-shadow hover:tw-shadow-xl", :href => admin_landing_messages_path}
    %div{class: "tw-p-1"}
      %h5{class: "tw-text-xl tw-font-bold"} Повідомлення
      %div{class: "tw-flex tw-flex-col sm:tw-flex-row"}
