%tr.nested-fields{ class: "#{'d-none' if form.object._destroy}", data: { new_record: form.object.new_record? } }
  %td.nested_form
    = render Admin::FieldsetComponent.new(form, :expense_category_id, :association_search, required: true, no_label: true, association_name: :expense_category, search_path: admin_expense_categories_path(name_field: :title), name_field: :expense_category_title)
  %td.nested_form
    = render Admin::FieldsetComponent.new(form, :amount, :text, no_label: true)
  %td.icon_cell
    = link_to "#", class: 'd-block', data: { action: "click->nested-form#remove_association" } do
      %i.bi.bi-trash.h3
    = form.hidden_field :_destroy