= modal.with_header do
  %ol.breadcrumb.text-dark
    %li.breadcrumb-item Надходження (витрати)
    %li.breadcrumb-item.active= "#{t('infold.operation.show')} ##{money_flow.id}"
= modal.with_body do
  .modal-body
    = render 'show_content', money_flow: money_flow
- unless admin_remote_modal_id == 'modal_sub'
  = modal.with_footer do
    .modal-footer
      = link_to t('infold.operation.edit'), edit_admin_money_flow_path(money_flow),
        class: 'btn btn-primary', data: { turbo_frame: "modal_main" }
      = link_to t('infold.operation.delete'), admin_money_flow_path(money_flow),
        class: 'btn btn-danger ms-1', data: { turbo_confirm: t('infold.operation.confirm',
        submit: t('infold.operation.delete')), turbo_method: :delete, turbo_frame: "_top" }