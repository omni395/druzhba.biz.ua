%section{class: "font-messiri bg-white relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 max-w-7xl"}
  %div{class: "py-3 sm:py-6 text-center"}
    %h2{class: "font-messiri text-red-500 text-2xl font-medium uppercase lg:text-3xl"}
      = t "landing.services.h2"

  %div{class: "mx-auto p-5 sm:p-10 md:p-16 lg:p-4 xl:p-2"}
    %div{class: "grid grid-cols-1 xl:grid-cols-3 lg:grid-cols-3 md:grid-cols-2 sm:grid-cols-1 gap-5"}
      - @repairs.each do |repair|
        %a{class: "rounded-xl shadow-lg hover:shadow-lg hover:shadow-red-300", href: service_path(repair)}
          %div{class: "row relative"}
            - if repair.image.attached?
              = image_tag repair.image, class: "transition-all duration-300 cursor-pointer filter grayscale-[50%] hover:grayscale-0 object-cover object-center w-full mb-8 lg:h-48 rounded-xl", alt: "#{repair.title}"
            %div{class: "p-4 pt-2 h-auto md:h-64 lg:h-64 xl:h-64"}
              %div{class: "mb-8"}
                %h3{class: "text-stone-900 font-bold text-lg mb-2 hover:text-red-500 inline-block"}
                  = repair.title
                %p{class: "mx-auto text-base leading-relaxed text-red-500"}
                  від
                  = repair.price
                  грн.
                %p{class: "text-justify mx-auto text-base leading-relaxed text-stone-500"}
                  = repair.description
                  