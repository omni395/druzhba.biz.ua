%div{class: "container mx-auto my-4"}
  - @services.each do |service|
    %a{class: "flex flex-col justify-between md:flex-row m-4 p-4 object-cover shadow-md cursor-pointer hover:shadow-lg hover:shadow-red-300", href: service_path(service)}
      - if service.image.attached?
        %div{cass: "content-center"}
          = image_tag(service.image, style: "width: 250px; height: auto;", class: "transition-all duration-300 cursor-pointer filter grayscale-[50%] hover:grayscale-0 object-cover items-center lg:h-48 rounded-xl", alt: "Швейна майстерня ☞ ДРУЖБА ☜")
      - else
        = image_tag("favicon.png", style: "width: 250px; height: auto;", class: "transition-all duration-300 cursor-pointer filter grayscale-[50%] hover:grayscale-0 object-cover items-center lg:h-48 rounded-xl", alt: "Швейна майстерня ☞ ДРУЖБА ☜")
      %div{class: "w-full md:w-2/3"}
        %div{class: "px-8 py-auto grow"}
          %h1{class: "grow mx-auto my-4 text-xl font-semibold leading-none tracking-tighter text-neutral-600 lg:text-2xl"}
            = service.title
          %p.mx-auto.text-base.leading-relaxed.text-gray-500
            = service.description
        %div{class: "text-red-600 w-full flex justify-end items-end"}
          %div{class: "pe-1 md:pe-2 w-full sm:w-2/3 border-t-2 border-red-300 text-end"}
            Докладніше